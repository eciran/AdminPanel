@model IEnumerable<AdminnDeneme.Entity.Category>

@{
	ViewBag.Title = "List";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
	<div class="card-body">
	<h2 style="text-align:center">Kategori Listesi</h2>

	<p>
		@Html.ActionLink("Kategori Ekle", "AddCategory")
	</p>
	<table class="table ">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.CategoryName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>

			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.CategoryName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>

				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }) |

					@Html.ActionLink("Delete", "Delete", new { id = item.CategoryID}, new { onclick = "return confirm('Silmek İstediğinize Emin Misiniz?');" })
				</td>
			</tr>
		}

	</table>
	</div>
</div>