@model AdminnDeneme.Entity.Category

@{
	ViewBag.Title = "AddCategory";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="content-wrapper">
	<h2 style="text-align:center">Kategori Ekle</h2>
	<section class="content">
		<div class="container-fluid">
			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()

				<div class="form-horizontal">

					<hr />
					@if (@ViewBag.Mesaj == "Basarili")
					{
						<div class="alert alert-success">
							<strong>Kategori Başarıyla Eklendi!</strong>
						</div>

					}

					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="form-group">
						<span class="control-label col-md-2"><strong>Kategori Adı</strong> </span>
						<div class="col-md-10">
							@Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
						</div>
					</div>

					<div class="form-group">
						<span class="control-label col-md-2"><strong>Kategori Açıklaması</strong> </span>
						<div class="col-md-10">
							@Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-offset-2 col-md-10">
							<input type="submit" value="Oluştur" class="btn btn-primary" />
						</div>
					</div>
				</div>
			}
		</div>
	</section>
</div>

